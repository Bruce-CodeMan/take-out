<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.brucecompiler.mapper.EmployeeMapper">
    <insert id="insert"></insert>
    <update id="update"></update>
    <delete id="deleteById"></delete>
    <select id="findAll" resultType="com.brucecompiler.entity.Employee"></select>
    <select id="findById" resultType="com.brucecompiler.entity.Employee"></select>
    <select id="findByName" resultType="com.brucecompiler.entity.Employee">
