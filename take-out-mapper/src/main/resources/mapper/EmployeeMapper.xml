<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.brucecompiler.mapper.EmployeeMapper">
    <insert id="insert">
        INSERT INTO employee VALUES (null, #{name}, #{username}, #{password}, #{phone}, #{sex}, #{idNumber}, #{status},
                                    #{createTime}, #{updateTime}, #{createUser}, #{updateUser})
    </insert>
    <update id="update" />
    <delete id="deleteById" />
    <select id="findAll" resultType="com.brucecompiler.entity.Employee" />
    <select id="findById" resultType="com.brucecompiler.entity.Employee" />
    <select id="findByName" resultType="com.brucecompiler.entity.Employee">
        SELECT * FROM employee WHERE username = #{username}
    </select>
    <select id="list" resultType="com.brucecompiler.entity.Employee">
        SELECT * FROM employee
        <where>
            <if test="name != null and name != ''">
                name like concat('%', #{name}, '%')
            </if>
        </where>
        ORDER BY create_time desc
    </select>
</mapper>

